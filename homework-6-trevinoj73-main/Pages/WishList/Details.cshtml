@page
@model homework_6_trevinoj73.Pages.WishList.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Wish</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Wish.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Wish.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Wish.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Wish.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Wish.Version)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Wish.Version)
        </dd>
        @foreach (var m in Model.Wish.Links)
        {
            <dt class="col-sm-2">
            @Html.DisplayNameFor(model => m.URLLink)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => m.URLLink)
        </dd>
          <dt class="col-sm-9">
                <form method="post">
                    <input type="hidden" asp-for="LinkIdToDeleat" value="@m.ID" />
                    <input type="submit" asp-page-handler="DeleteLink" asp-route-id="@Model.Wish.WishID" value="Delete Link" class="btn btn-danger btn-sm" />
                </form>
            </dt>
        }
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Wish.WishID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
